<div class="container-fluid">
  <div class="row p-4">
        
    <%# 管理者アカウント登録フォーム %>
    <div class="col-lg-10 mx-auto">

      <h3>管理者アカウント 登録</h3>
      <div class="pt-3"></div>

      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= render "admins/shared/error_messages", resource: resource %>

        <div class="form-row m-2">
          <div class="field form-group col-12">
            <%= f.label :email %><br />
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"form-control col-lg-4" %>
            <div class="mb-3"></div>
          </div>

          <div class="field form-group col-12">
            <%= f.label :password %>
            <% if @minimum_password_length %>
            <em>(<%= @minimum_password_length %> 文字以上)</em>
            <% end %><br />
            <%= f.password_field :password, autocomplete: "new-password", class:"form-control col-lg-4" %>
            <div class="mb-3"></div>
          </div>

          <div class="field form-group col-12">
            <%= f.label :password_confirmation %><br />
            <%= f.password_field :password_confirmation, autocomplete: "new-password", class:"form-control col-lg-4" %>
            <div class="mb-3"></div>
          </div>

          <div class="actions form-group col-12 text-center">
            <div class="mt-3"></div>
            <%= f.submit "管理者アカウント登録", class:"btn btn-danger col-lg-3" %>
          </div>
        </div>

      <% end %>
    </div>
    <%# 管理者アカウント登録フォーム 終わり %>


    <div class="col-12">
      <%= render "admins/shared/links" %>
    </div>

  </div>
</div>